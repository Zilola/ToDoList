@using Microsoft.AspNetCore.Components.Web
@using WebToDoList.Models
@using WebToDoList.Services
@inject JsonListService ListService



<style>
.Btn:hover{
    background-color:azure;
}
    </style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @*<div class="card">*@


            <input class="form-control" placeholder="Type here" @bind="newTodo" style="background-color:lightcyan" />

            @*</div>*@
            <div class="text-xl-right">
                <button @onclick="AddToDo" style="color:darkcyan" class="Btn">Add Tasks </button>
            </div>
        </div>
    </div>
</div>

@*@foreach (var list in ListService.GetLists())
