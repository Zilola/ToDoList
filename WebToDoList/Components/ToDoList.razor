@foreach (var todo in todos)
{
    <div class="card">
        @todo.Description
        <div class="text-sm-right">
            <button style="color:darkcyan" class="Btn" @onclick="CancelToDo">X</button>
        </div>
    </div>
}


@code {

    private List<ListTask> todos = new List<ListTask>();



    private string newTodo;

    private void AddToDo()
    {

        if (!string.IsNullOrWhiteSpace(newTodo))
        {

            todos.Add(new ListTask { Description = newTodo });
            newTodo = string.Empty;

            
        }

    }

    private void CancelToDo()
    {
        if (string.IsNullOrWhiteSpace(newTodo))
        {
            int i = 0;
                this.todos.RemoveAt(i);             
}
           
    }


}

